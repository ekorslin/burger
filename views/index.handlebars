<h1>Eat-Da-Burger!</h1>
  <img src="/assets/images/burger.png" width="400px" id="burger"/>
<div class="row">
<div class="col-sm-6">
<h2>To devour!!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-sm-6">
<h2>Been devoured!!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" burger_name="burger_name">
  </div>

  <button type="submit">Add a Burger</button>
</form>